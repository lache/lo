{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015", "esnext", "dom"],
    "outDir": ".build",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "inlineSources": true
  },
  "exclude": ["node_modules", ".build"]
}
